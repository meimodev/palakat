generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Church {
  id                      Int                      @id @default(autoincrement())
  name                    String
  phoneNumber             String?
  email                   String?
  description             String?
  documentAccountNumber   String?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  locationId              Int                      @unique
  location                Location                 @relation(fields: [locationId], references: [id])
  columns                 Column[]
  memberships             Membership[]
  membershipPositions     MembershipPosition[]
  revenues                Revenue[]
  expenses                Expense[]
  reports                 Report[]
  documents               Document[]
  files                   FileManager[]
  approvalRules           ApprovalRule[]
  financialAccountNumbers FinancialAccountNumber[]

  @@index([name])
}

model Column {
  id          Int          @id @default(autoincrement())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  churchId    Int?
  church      Church?      @relation(fields: [churchId], references: [id], onDelete: SetNull)
  memberships Membership[]
  activities  Activity[]

  @@unique([churchId, name])
}

model Membership {
  id                   Int                  @id @default(autoincrement())
  baptize              Boolean              @default(false)
  sidi                 Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  accountId            Int                  @unique
  columnId             Int?
  churchId             Int?
  supervisorActivities Activity[]           @relation("SupervisorActivities")
  approvers            Approver[]
  account              Account              @relation(fields: [accountId], references: [id])
  church               Church?              @relation(fields: [churchId], references: [id], onDelete: SetNull)
  column               Column?              @relation(fields: [columnId], references: [id], onDelete: SetNull)
  membershipPositions  MembershipPosition[]

  @@index([churchId, columnId])
}

model MembershipPosition {
  id             Int           @id @default(autoincrement())
  name           String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  membershipId   Int?
  membership     Membership?   @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  churchId       Int?
  church         Church?       @relation(fields: [churchId], references: [id], onDelete: SetNull)
  approvalRuleId Int?
  approvalRule   ApprovalRule? @relation(fields: [approvalRuleId], references: [id], onDelete: SetNull)

  @@unique([churchId, name])
}

model Account {
  id                    Int            @id @default(autoincrement())
  name                  String
  phone                 String         @unique
  email                 String?        @unique
  passwordHash          String?
  isActive              Boolean        @default(true)
  claimed               Boolean        @default(false)
  failedLoginAttempts   Int            @default(0)
  lockUntil             DateTime?
  refreshTokenHash      String?
  refreshTokenExpiresAt DateTime?
  refreshTokenJti       String?
  gender                Gender
  maritalStatus         MaritalStatus
  dob                   DateTime
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  membership            Membership?
  churchRequest         ChurchRequest?
}

model ApprovalRule {
  id                       Int                     @id @default(autoincrement())
  name                     String
  description              String?
  active                   Boolean                 @default(true)
  activityType             ActivityType?           // Optional activity type filter
  financialType            FinancialType?          // Optional financial type filter
  financialAccountNumberId Int?                    @unique // Unique constraint: each financial account can only be linked to one approval rule
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id], onDelete: Cascade)
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id], onDelete: SetNull)
  positions                MembershipPosition[]

  @@index([churchId])
  @@index([active])
  @@index([activityType])
  @@index([financialType])
}

model Activity {
  id            Int            @id @default(autoincrement())
  supervisorId  Int
  columnId      Int?
  bipra         Bipra?
  title         String
  description   String?
  locationId    Int?
  date          DateTime?
  note          String?
  fileId        Int?           @unique
  activityType  ActivityType
  reminder      Reminder?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  supervisor    Membership     @relation("SupervisorActivities", fields: [supervisorId], references: [id], onDelete: Cascade)
  column        Column?        @relation(fields: [columnId], references: [id], onDelete: SetNull)
  approvers     Approver[]
  location      Location?      @relation(fields: [locationId], references: [id])
  file          FileManager?    @relation(fields: [fileId], references: [id])
  revenue       Revenue?
  expense       Expense?
  notifications Notification[]

  @@index([date])
  @@index([supervisorId])
  @@index([supervisorId, date])
  @@index([columnId])
  @@index([activityType])
  @@index([bipra])
}

model Revenue {
  id                       Int                     @id @default(autoincrement())
  accountNumber            String
  amount                   Int
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id])
  activityId               Int?                    @unique
  activity                 Activity?               @relation(fields: [activityId], references: [id])
  paymentMethod            PaymentMethod
  financialAccountNumberId Int?
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id])
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt

  @@index([financialAccountNumberId])
}

model Expense {
  id                       Int                     @id @default(autoincrement())
  accountNumber            String
  amount                   Int
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id])
  activityId               Int?                    @unique
  activity                 Activity?               @relation(fields: [activityId], references: [id])
  paymentMethod            PaymentMethod
  financialAccountNumberId Int?
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id])
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt

  @@index([financialAccountNumberId])
}

model Location {
  id         Int        @id @default(autoincrement())
  name       String
  latitude   Float?
  longitude  Float?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  activities Activity[]
  church     Church?
}

model Approver {
  id           Int            @id @default(autoincrement())
  membershipId Int
  membership   Membership     @relation(fields: [membershipId], references: [id])
  activityId   Int
  activity     Activity       @relation(fields: [activityId], references: [id], onDelete: Cascade)
  status       ApprovalStatus @default(UNCONFIRMED)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([activityId, membershipId])
  @@index([activityId])
  @@index([membershipId])
  @@index([status])
}

model Song {
  id        Int        @id @default(autoincrement())
  title     String
  index     Int        @unique
  book      Book
  link      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  parts     SongPart[]
}

model SongPart {
  id      Int    @id @default(autoincrement())
  index   Int
  name    String
  content String
  songId  Int
  song    Song   @relation(fields: [songId], references: [id])

  @@unique([songId, index])
  @@index([songId])
}

enum Gender {
  MALE
  FEMALE
}

enum Bipra {
  PKB
  WKI
  PMD
  RMJ
  ASM
}

enum ActivityType {
  SERVICE
  EVENT
  ANNOUNCEMENT
}

enum Book {
  NKB
  NNBT
  KJ
  DSL
}

enum ApprovalStatus {
  UNCONFIRMED
  APPROVED
  REJECTED
}

enum RequestStatus {
  TODO
  DOING
  DONE
}

enum MaritalStatus {
  MARRIED
  SINGLE
}

enum PaymentMethod {
  CASH
  CASHLESS
}

enum Reminder {
  TEN_MINUTES
  THIRTY_MINUTES
  ONE_HOUR
  TWO_HOURS
}

enum FinancialType {
  REVENUE
  EXPENSE
}

enum NotificationType {
  ACTIVITY_CREATED
  APPROVAL_REQUIRED
  APPROVAL_CONFIRMED
  APPROVAL_REJECTED
}

enum GeneratedBy {
  MANUAL
  SYSTEM
}

enum FileProvider {
  FIREBASE_STORAGE
}

model FileManager {
  id        Int       @id @default(autoincrement())
  provider  FileProvider @default(FIREBASE_STORAGE)
  bucket    String
  path      String
  sizeInKB  Float
  contentType   String?
  originalName  String?
  churchId  Int
  church    Church    @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  report    Report?
  document  Document?
  activity  Activity?

  @@unique([bucket, path])
  @@index([churchId])
  @@index([provider])
}

model Report {
  id          Int         @id @default(autoincrement())
  name        String
  generatedBy GeneratedBy
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  churchId    Int
  church      Church      @relation(fields: [churchId], references: [id])
  fileId      Int         @unique
  file        FileManager @relation(fields: [fileId], references: [id])

  @@index([churchId])
  @@index([generatedBy])
}

model Document {
  id            Int          @id @default(autoincrement())
  name          String
  accountNumber String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  churchId      Int
  church        Church       @relation(fields: [churchId], references: [id])
  fileId        Int?         @unique
  file          FileManager? @relation(fields: [fileId], references: [id])

  @@index([churchId])
  @@index([accountNumber])
}

model ChurchRequest {
  id            Int           @id @default(autoincrement())
  churchName    String
  churchAddress String
  contactPerson String
  contactPhone  String
  status        RequestStatus @default(TODO)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  requesterId   Int           @unique
  requester     Account       @relation(fields: [requesterId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([createdAt])
  @@index([status])
}

model FinancialAccountNumber {
  id            Int            @id @default(autoincrement())
  accountNumber String
  description   String?
  type          FinancialType
  churchId      Int
  church        Church         @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  revenues      Revenue[]
  expenses      Expense[]
  approvalRules ApprovalRule[]

  @@unique([churchId, accountNumber])
  @@index([churchId])
  @@index([accountNumber])
  @@index([type])
}

model Notification {
  id         Int              @id @default(autoincrement())
  title      String
  body       String
  type       NotificationType
  recipient  String
  activityId Int?
  activity   Activity?        @relation(fields: [activityId], references: [id], onDelete: SetNull)
  isRead     Boolean          @default(false)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@index([recipient])
  @@index([isRead])
  @@index([type])
  @@index([activityId])
  @@index([createdAt])
}
