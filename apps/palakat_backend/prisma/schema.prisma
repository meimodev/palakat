generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Church {
  id                      Int                      @id @default(autoincrement())
  name                    String
  phoneNumber             String?
  email                   String?
  description             String?
  documentAccountNumber   String?
  letterhead              ChurchLetterhead?
  permissionPolicy        ChurchPermissionPolicy?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  locationId              Int                      @unique
  location                Location                 @relation(fields: [locationId], references: [id])
  columns                 Column[]
  memberships             Membership[]
  membershipInvitations   MembershipInvitation[]
  membershipPositions     MembershipPosition[]
  revenues                Revenue[]
  expenses                Expense[]
  cashAccounts             CashAccount[]
  cashMutations            CashMutation[]
  reports                 Report[]
  documents               Document[]
  files                   FileManager[]
  approvalRules           ApprovalRule[]
  financialAccountNumbers FinancialAccountNumber[]
  churchRequestsApproved  ChurchRequest[]           @relation("ChurchRequestApprovedChurch")
  reportJobs              ReportJob[]

  @@index([name])
}

model ChurchPermissionPolicy {
  id        Int      @id @default(autoincrement())
  churchId  Int      @unique
  church    Church   @relation(fields: [churchId], references: [id], onDelete: Cascade)
  policy    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([churchId])
}

model ChurchLetterhead {
  id         Int         @id @default(autoincrement())
  churchId   Int         @unique
  church     Church      @relation(fields: [churchId], references: [id], onDelete: Cascade)
  logoFileId Int?        @unique
  logoFile   FileManager? @relation("ChurchLetterheadLogo", fields: [logoFileId], references: [id], onDelete: SetNull)
  title      String?
  line1      String?
  line2      String?
  line3      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([churchId])
}

model Column {
  id          Int          @id @default(autoincrement())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  churchId    Int?
  church      Church?      @relation(fields: [churchId], references: [id], onDelete: SetNull)
  memberships Membership[]
  activities  Activity[]
  membershipInvitations MembershipInvitation[]

  @@unique([churchId, name])
}

model Membership {
  id                   Int                  @id @default(autoincrement())
  baptize              Boolean              @default(false)
  sidi                 Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  accountId            Int                  @unique
  columnId             Int?
  churchId             Int?
  supervisorActivities Activity[]           @relation("SupervisorActivities")
  approvers            Approver[]
  account              Account              @relation(fields: [accountId], references: [id])
  church               Church?              @relation(fields: [churchId], references: [id], onDelete: SetNull)
  column               Column?              @relation(fields: [columnId], references: [id], onDelete: SetNull)
  membershipPositions  MembershipPosition[]

  @@index([churchId, columnId])
}

model MembershipPosition {
  id             Int           @id @default(autoincrement())
  name           String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  membershipId   Int?
  membership     Membership?   @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  churchId       Int?
  church         Church?       @relation(fields: [churchId], references: [id], onDelete: SetNull)
  approvalRuleId Int?
  approvalRule   ApprovalRule? @relation(fields: [approvalRuleId], references: [id], onDelete: SetNull)

  @@unique([churchId, name])
}

model Account {
  id                    Int            @id @default(autoincrement())
  name                  String
  phone                 String?        @unique
  email                 String?        @unique
  passwordHash          String?
  role                  AccountRole    @default(USER)
  isActive              Boolean        @default(true)
  claimed               Boolean        @default(false)
  failedLoginAttempts   Int            @default(0)
  lockUntil             DateTime?
  refreshTokenHash      String?
  refreshTokenExpiresAt DateTime?
  refreshTokenJti       String?
  gender                Gender
  maritalStatus         MaritalStatus
  dob                   DateTime
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  membership            Membership?
  churchRequest         ChurchRequest?  @relation("ChurchRequestRequester")
  reviewedChurchRequests ChurchRequest[] @relation("ChurchRequestReviewedBy")
  sentMembershipInvitations     MembershipInvitation[] @relation("MembershipInvitationInviter")
  receivedMembershipInvitations MembershipInvitation[] @relation("MembershipInvitationInvitee")
  articles              Article[]
  articleLikes          ArticleLike[]
  cashMutationsCreated   CashMutation[]
  reportsCreated        Report[]
  reportJobsRequested   ReportJob[]    @relation("ReportJobRequester")
}

model ApprovalRule {
  id                       Int                     @id @default(autoincrement())
  name                     String
  description              String?
  active                   Boolean                 @default(true)
  activityType             ActivityType?           // Optional activity type filter
  financialType            FinancialType?          // Optional financial type filter
  financialAccountNumberId Int?                    @unique // Unique constraint: each financial account can only be linked to one approval rule
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id], onDelete: Cascade)
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id], onDelete: SetNull)
  positions                MembershipPosition[]

  @@index([churchId])
  @@index([active])
  @@index([activityType])
  @@index([financialType])
}

model Activity {
  id            Int            @id @default(autoincrement())
  supervisorId  Int
  columnId      Int?
  bipra         Bipra?
  title         String
  description   String?
  locationId    Int?
  date          DateTime?
  note          String?
  fileId        Int?           @unique
  activityType  ActivityType
  reminder      Reminder?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  supervisor    Membership     @relation("SupervisorActivities", fields: [supervisorId], references: [id], onDelete: Cascade)
  column        Column?        @relation(fields: [columnId], references: [id], onDelete: SetNull)
  approvers     Approver[]
  location      Location?      @relation(fields: [locationId], references: [id])
  file          FileManager?    @relation(fields: [fileId], references: [id])
  revenue       Revenue?
  expense       Expense?
  notifications Notification[]

  @@index([date])
  @@index([supervisorId])
  @@index([supervisorId, date])
  @@index([columnId])
  @@index([activityType])
  @@index([bipra])
}

model Revenue {
  id                       Int                     @id @default(autoincrement())
  accountNumber            String
  amount                   Int
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id])
  activityId               Int?                    @unique
  activity                 Activity?               @relation(fields: [activityId], references: [id])
  paymentMethod            PaymentMethod
  financialAccountNumberId Int?
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id])
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt

  @@index([financialAccountNumberId])
}

model Expense {
  id                       Int                     @id @default(autoincrement())
  accountNumber            String
  amount                   Int
  churchId                 Int
  church                   Church                  @relation(fields: [churchId], references: [id])
  activityId               Int?                    @unique
  activity                 Activity?               @relation(fields: [activityId], references: [id])
  paymentMethod            PaymentMethod
  financialAccountNumberId Int?
  financialAccountNumber   FinancialAccountNumber? @relation(fields: [financialAccountNumberId], references: [id])
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt

  @@index([financialAccountNumberId])
}

model CashAccount {
  id             Int            @id @default(autoincrement())
  name           String
  currency       String         @default("IDR")
  openingBalance Int            @default(0)
  churchId       Int
  church         Church         @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  mutationsFrom  CashMutation[] @relation("CashMutationFromAccount")
  mutationsTo    CashMutation[] @relation("CashMutationToAccount")

  @@unique([churchId, name])
  @@index([churchId])
}

model CashMutation {
  id            Int                     @id @default(autoincrement())
  type          CashMutationType
  amount        Int
  fromAccountId Int?
  toAccountId   Int?
  happenedAt    DateTime
  note          String?
  referenceType CashMutationReferenceType?
  referenceId   Int?
  churchId      Int
  church        Church                   @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdById   Int?
  createdBy     Account?                 @relation(fields: [createdById], references: [id], onDelete: SetNull)
  fromAccount   CashAccount?             @relation("CashMutationFromAccount", fields: [fromAccountId], references: [id], onDelete: SetNull)
  toAccount     CashAccount?             @relation("CashMutationToAccount", fields: [toAccountId], references: [id], onDelete: SetNull)
  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt

  @@index([churchId])
  @@index([happenedAt])
  @@index([type])
  @@index([fromAccountId])
  @@index([toAccountId])
}

model Location {
  id         Int        @id @default(autoincrement())
  name       String
  latitude   Float?
  longitude  Float?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  activities Activity[]
  church     Church?
}

model Approver {
  id           Int            @id @default(autoincrement())
  membershipId Int
  membership   Membership     @relation(fields: [membershipId], references: [id])
  activityId   Int
  activity     Activity       @relation(fields: [activityId], references: [id], onDelete: Cascade)
  status       ApprovalStatus @default(UNCONFIRMED)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([activityId, membershipId])
  @@index([activityId])
  @@index([membershipId])
  @@index([status])
}

model Song {
  id        Int        @id @default(autoincrement())
  title     String
  index     Int
  book      Book
  link      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  parts     SongPart[]

  @@unique([book, index])
}

model SongPart {
  id      Int    @id @default(autoincrement())
  index   Int
  name    String
  content String
  songId  Int
  song    Song   @relation(fields: [songId], references: [id])

  @@unique([songId, index])
  @@index([songId])
}

enum Gender {
  MALE
  FEMALE
}

enum AccountRole {
  USER
  SUPER_ADMIN
}

enum Bipra {
  PKB
  WKI
  PMD
  RMJ
  ASM
}

enum ActivityType {
  SERVICE
  EVENT
  ANNOUNCEMENT
}

enum Book {
  NKB
  NNBT
  KJ
  DSL
}

enum ApprovalStatus {
  UNCONFIRMED
  APPROVED
  REJECTED
}

enum MembershipInvitationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RequestStatus {
  TODO
  DOING
  DONE
  REJECTED
}

enum MaritalStatus {
  MARRIED
  SINGLE
}

enum PaymentMethod {
  CASH
  CASHLESS
}

enum Reminder {
  TEN_MINUTES
  THIRTY_MINUTES
  ONE_HOUR
  TWO_HOURS
}

enum FinancialType {
  REVENUE
  EXPENSE
}

enum CashMutationType {
  IN
  OUT
  TRANSFER
  ADJUSTMENT
}

enum CashMutationReferenceType {
  REVENUE
  EXPENSE
  MANUAL
  TRANSFER
}

enum NotificationType {
  ACTIVITY_CREATED
  APPROVAL_REQUIRED
  APPROVAL_CONFIRMED
  APPROVAL_REJECTED
  CHURCH_REQUEST_APPROVED
  CHURCH_REQUEST_REJECTED
  REPORT_READY
  REPORT_FAILED
  MEMBER_BIRTHDAY
}

enum ReportJobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ArticleType {
  PREACHING_MATERIAL
  GAME_INSTRUCTION
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum GeneratedBy {
  MANUAL
  SYSTEM
}

enum ReportGenerateType {
  INCOMING_DOCUMENT
  OUTCOMING_DOCUMENT
  CONGREGATION
  SERVICES
  ACTIVITY
  FINANCIAL
}

enum ReportFormat {
  PDF
  XLSX
}

enum DocumentInput {
  INCOME
  OUTCOME
}

enum FileProvider {
  FIREBASE_STORAGE
}

model FileManager {
  id        Int       @id @default(autoincrement())
  provider  FileProvider @default(FIREBASE_STORAGE)
  bucket    String
  path      String
  sizeInKB  Float
  contentType   String?
  originalName  String?
  churchId  Int
  church    Church    @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  report    Report?
  document  Document?
  activity  Activity?
  churchLetterheadLogo ChurchLetterhead? @relation("ChurchLetterheadLogo")

  @@unique([bucket, path])
  @@index([churchId])
  @@index([provider])
}

model Report {
  id          Int         @id @default(autoincrement())
  name        String
  type        ReportGenerateType @default(INCOMING_DOCUMENT)
  format      ReportFormat       @default(PDF)
  params      Json?
  generatedBy GeneratedBy
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  churchId    Int
  church      Church      @relation(fields: [churchId], references: [id])
  fileId      Int         @unique
  file        FileManager @relation(fields: [fileId], references: [id])
  createdById Int?
  createdBy   Account?    @relation(fields: [createdById], references: [id], onDelete: SetNull)
  reportJob   ReportJob?

  publicId       String?   @unique
  verifyTokenHash String?
  revokedAt      DateTime?
  revokedReason  String?
  fileSha256     String?

  @@index([churchId])
  @@index([generatedBy])
  @@index([type])
  @@index([format])
  @@index([createdById])
}

model Document {
  id            Int          @id @default(autoincrement())
  name          String
  accountNumber String
  input         DocumentInput @default(INCOME)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  churchId      Int
  church        Church       @relation(fields: [churchId], references: [id])
  fileId        Int?         @unique
  file          FileManager? @relation(fields: [fileId], references: [id])

  publicId       String?   @unique
  verifyTokenHash String?
  revokedAt      DateTime?
  revokedReason  String?
  fileSha256     String?

  @@index([churchId])
  @@index([accountNumber])
}

model ChurchRequest {
  id            Int           @id @default(autoincrement())
  churchName    String
  churchAddress String
  contactPerson String
  contactPhone  String
  status        RequestStatus @default(TODO)
  decisionNote  String?
  reviewedAt    DateTime?
  reviewedById  Int?
  reviewedBy    Account?      @relation("ChurchRequestReviewedBy", fields: [reviewedById], references: [id], onDelete: SetNull)
  approvedChurchId Int?
  approvedChurch   Church?    @relation("ChurchRequestApprovedChurch", fields: [approvedChurchId], references: [id], onDelete: SetNull)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  requesterId   Int           @unique
  requester     Account       @relation("ChurchRequestRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([createdAt])
  @@index([status])
}

model MembershipInvitation {
  id             Int                       @id @default(autoincrement())
  inviterId      Int
  inviteeId      Int
  churchId       Int
  columnId       Int
  baptize        Boolean                   @default(false)
  sidi           Boolean                   @default(false)
  status         MembershipInvitationStatus @default(PENDING)
  rejectedReason String?
  rejectedAt     DateTime?
  createdAt      DateTime                  @default(now())
  updatedAt      DateTime                  @updatedAt

  inviter Account @relation("MembershipInvitationInviter", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee Account @relation("MembershipInvitationInvitee", fields: [inviteeId], references: [id], onDelete: Cascade)
  church  Church  @relation(fields: [churchId], references: [id], onDelete: Cascade)
  column  Column  @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@index([inviterId])
  @@index([inviteeId])
  @@index([inviteeId, status])
  @@index([status])
  @@index([churchId])
  @@index([columnId])
  @@index([createdAt])
}

model FinancialAccountNumber {
  id            Int            @id @default(autoincrement())
  accountNumber String
  description   String?
  type          FinancialType
  churchId      Int
  church        Church         @relation(fields: [churchId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  revenues      Revenue[]
  expenses      Expense[]
  approvalRules ApprovalRule[]

  @@unique([churchId, accountNumber])
  @@index([churchId])
  @@index([accountNumber])
  @@index([type])
}

model Notification {
  id         Int              @id @default(autoincrement())
  title      String
  body       String
  type       NotificationType
  recipient  String
  activityId Int?
  activity   Activity?        @relation(fields: [activityId], references: [id], onDelete: SetNull)
  dedupeKey  String?          @unique
  data       Json?
  isRead     Boolean          @default(false)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@index([recipient])
  @@index([isRead])
  @@index([type])
  @@index([activityId])
  @@index([createdAt])
}

model Article {
  id            Int           @id @default(autoincrement())
  type          ArticleType
  status        ArticleStatus @default(DRAFT)
  title         String
  slug          String        @unique
  excerpt       String?
  content       String
  coverImageUrl String?
  publishedAt   DateTime?
  likesCount    Int           @default(0)
  authorId      Int?
  author        Account?      @relation(fields: [authorId], references: [id], onDelete: SetNull)
  likes         ArticleLike[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([status, publishedAt])
  @@index([type])
}

model ArticleLike {
  id        Int      @id @default(autoincrement())
  articleId Int
  accountId Int
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([articleId, accountId])
  @@index([articleId])
  @@index([accountId])
}

model ReportJob {
  id             Int              @id @default(autoincrement())
  status         ReportJobStatus  @default(PENDING)
  type           ReportGenerateType
  format         ReportFormat     @default(PDF)
  params         Json?
  errorMessage   String?
  progress       Int              @default(0)
  churchId       Int
  church         Church           @relation(fields: [churchId], references: [id])
  requestedById  Int
  requestedBy    Account          @relation("ReportJobRequester", fields: [requestedById], references: [id])
  reportId       Int?             @unique
  report         Report?          @relation(fields: [reportId], references: [id])
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  completedAt    DateTime?

  @@index([status])
  @@index([churchId])
  @@index([requestedById])
  @@index([status, createdAt])
}
