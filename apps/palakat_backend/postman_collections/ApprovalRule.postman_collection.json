{
  "info": {
    "name": "Approval Rule API",
    "description": "Approval rule management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Get All Approval Rules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/approval-rule?page=1&pageSize=10&churchId=&active=",
          "host": ["{{base_url}}"],
          "path": ["approval-rule"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number (default: 1)"
            },
            {
              "key": "pageSize",
              "value": "10",
              "description": "Items per page (default: 10, max: 100)"
            },
            {
              "key": "churchId",
              "value": "",
              "description": "Filter by church ID"
            },
            {
              "key": "active",
              "value": "",
              "description": "Filter by active status (true/false)"
            }
          ]
        },
        "description": "Get paginated list of approval rules with optional filters"
      }
    },
    {
      "name": "Get Approval Rule by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/approval-rule/:id",
          "host": ["{{base_url}}"],
          "path": ["approval-rule", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Approval Rule ID"
            }
          ]
        },
        "description": "Get single approval rule by ID with related positions"
      }
    },
    {
      "name": "Create Approval Rule",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Financial Approval\",\n  \"description\": \"Approval rule for financial transactions\",\n  \"active\": true,\n  \"churchId\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/approval-rule",
          "host": ["{{base_url}}"],
          "path": ["approval-rule"]
        },
        "description": "Create a new approval rule. Required fields: name, churchId"
      }
    },
    {
      "name": "Create Approval Rule with Positions",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Senior Leadership Approval\",\n  \"description\": \"Approval rule requiring senior leadership\",\n  \"active\": true,\n  \"churchId\": 1,\n  \"positions\": {\n    \"connect\": [\n      { \"id\": 1 },\n      { \"id\": 2 }\n    ]\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/approval-rule",
          "host": ["{{base_url}}"],
          "path": ["approval-rule"]
        },
        "description": "Create approval rule and connect to existing membership positions"
      }
    },
    {
      "name": "Update Approval Rule",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Approval Rule\",\n  \"description\": \"Updated description\",\n  \"active\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/approval-rule/:id",
          "host": ["{{base_url}}"],
          "path": ["approval-rule", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Update approval rule fields (partial update)"
      }
    },
    {
      "name": "Delete Approval Rule",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/approval-rule/:id",
          "host": ["{{base_url}}"],
          "path": ["approval-rule", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Delete approval rule by ID"
      }
    }
  ]
}
