{
  "info": {
    "name": "Church Request API",
    "description": "Church registration request endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Create Church Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"churchName\": \"GKI Pondok Indah Baru\",\n  \"churchAddress\": \"Jl. Metro Pondok Indah No. 45, Jakarta Selatan\",\n  \"contactPerson\": \"John Doe\",\n  \"contactPhone\": \"081234567890\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/church-request",
          "host": ["{{base_url}}"],
          "path": ["church-request"]
        },
        "description": "Submit a new church registration request. The requester is automatically set from the authenticated user."
      }
    },
    {
      "name": "Get All Church Requests",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/church-request?page=1&pageSize=10&search=&requesterId=",
          "host": ["{{base_url}}"],
          "path": ["church-request"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number (default: 1)"
            },
            {
              "key": "pageSize",
              "value": "10",
              "description": "Number of records per page (default: 10, max: 100)"
            },
            {
              "key": "search",
              "value": "",
              "description": "Search by church name, address, contact person, or phone (min 3 characters)"
            },
            {
              "key": "requesterId",
              "value": "",
              "description": "Filter by requester account ID"
            }
          ]
        },
        "description": "Get all church requests with pagination and filtering. Returns requests ordered by creation date (newest first)."
      }
    },
    {
      "name": "Get My Church Request",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/church-request/my-request",
          "host": ["{{base_url}}"],
          "path": ["church-request", "my-request"]
        },
        "description": "Get the church request submitted by the currently authenticated user."
      }
    },
    {
      "name": "Get Church Request by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/church-request/:id",
          "host": ["{{base_url}}"],
          "path": ["church-request", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Get a specific church request by ID with requester information."
      }
    },
    {
      "name": "Update Church Request",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"churchName\": \"GKI Pondok Indah Baru (Updated)\",\n  \"churchAddress\": \"Jl. Metro Pondok Indah No. 45A, Jakarta Selatan\",\n  \"contactPerson\": \"John Doe\",\n  \"contactPhone\": \"081234567891\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/church-request/:id",
          "host": ["{{base_url}}"],
          "path": ["church-request", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Update an existing church request. All fields are optional."
      }
    },
    {
      "name": "Delete Church Request",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/church-request/:id",
          "host": ["{{base_url}}"],
          "path": ["church-request", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Delete a church request by ID."
      }
    }
  ]
}
