{
  "info": {
    "name": "Expense API",
    "description": "Expense management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
  },
  "variable": [{"key": "base_url", "value": "http://localhost:3000"}],
  "item": [
    {
      "name": "Get All Expenses",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/expense?page=1&pageSize=10",
          "host": ["{{base_url}}"],
          "path": ["expense"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "pageSize", "value": "10"}
          ]
        }
      }
    },
    {
      "name": "Get Expense by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/expense/:id",
          "host": ["{{base_url}}"],
          "path": ["expense", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Create Expense (CASH)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountNumber\": \"EXP-2024-001\",\n  \"amount\": 2000000,\n  \"paymentMethod\": \"CASH\",\n  \"church\": {\n    \"connect\": {\"id\": 1}\n  },\n  \"activity\": {\n    \"connect\": {\"id\": 3}\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/expense",
          "host": ["{{base_url}}"],
          "path": ["expense"]
        },
        "description": "PaymentMethod: CASH | CASHLESS"
      }
    },
    {
      "name": "Create Expense (CASHLESS)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountNumber\": \"EXP-2024-002\",\n  \"amount\": 1500000,\n  \"paymentMethod\": \"CASHLESS\",\n  \"church\": {\n    \"connect\": {\"id\": 1}\n  },\n  \"activity\": {\n    \"connect\": {\"id\": 4}\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/expense",
          "host": ["{{base_url}}"],
          "path": ["expense"]
        }
      }
    },
    {
      "name": "Update Expense",
      "request": {
        "method": "PATCH",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 2200000,\n  \"accountNumber\": \"EXP-2024-001-UPDATED\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/expense/:id",
          "host": ["{{base_url}}"],
          "path": ["expense", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Delete Expense",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/expense/:id",
          "host": ["{{base_url}}"],
          "path": ["expense", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    }
  ]
}
