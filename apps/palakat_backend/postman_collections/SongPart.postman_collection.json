{
  "info": {
    "name": "Song Part API",
    "description": "Song part management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
  },
  "variable": [{"key": "base_url", "value": "http://localhost:3000"}],
  "item": [
    {
      "name": "Get All Song Parts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/song-part?page=1&pageSize=10",
          "host": ["{{base_url}}"],
          "path": ["song-part"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "pageSize", "value": "10"}
          ]
        }
      }
    },
    {
      "name": "Get Song Part by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/song-part/:id",
          "host": ["{{base_url}}"],
          "path": ["song-part", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Create Song Part",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"index\": 1,\n  \"name\": \"Bait 1\",\n  \"content\": \"Amazing grace, how sweet the sound...\",\n  \"song\": {\"connect\": {\"id\": 1}}\n}"
        },
        "url": {
          "raw": "{{base_url}}/song-part",
          "host": ["{{base_url}}"],
          "path": ["song-part"]
        }
      }
    },
    {
      "name": "Update Song Part",
      "request": {
        "method": "PATCH",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Bait 1 (Revised)\",\n  \"content\": \"Amazing grace, how sweet the sound that saved a wretch like me...\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/song-part/:id",
          "host": ["{{base_url}}"],
          "path": ["song-part", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Delete Song Part",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/song-part/:id",
          "host": ["{{base_url}}"],
          "path": ["song-part", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    }
  ]
}
