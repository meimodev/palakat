{
  "info": {
    "name": "Report API",
    "description": "Report management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
  },
  "variable": [{"key": "base_url", "value": "http://localhost:3000"}],
  "item": [
    {
      "name": "Get All Reports",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/report?page=1&pageSize=10&search=&churchId=&generatedBy=",
          "host": ["{{base_url}}"],
          "path": ["report"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "pageSize", "value": "10"},
            {"key": "search", "value": "", "description": "Search by name"},
            {"key": "churchId", "value": "", "description": "Filter by church ID"},
            {"key": "generatedBy", "value": "", "description": "MANUAL | SYSTEM"}
          ]
        }
      }
    },
    {
      "name": "Get Report by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/report/:id",
          "host": ["{{base_url}}"],
          "path": ["report", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Create Report (MANUAL)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laporan Keuangan Q1 2024\",\n  \"generatedBy\": \"MANUAL\",\n  \"church\": {\"connect\": {\"id\": 1}},\n  \"file\": {\"connect\": {\"id\": 1}}\n}"
        },
        "url": {
          "raw": "{{base_url}}/report",
          "host": ["{{base_url}}"],
          "path": ["report"]
        }
      }
    },
    {
      "name": "Create Report (SYSTEM)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laporan Kegiatan Bulanan\",\n  \"generatedBy\": \"SYSTEM\",\n  \"church\": {\"connect\": {\"id\": 1}},\n  \"file\": {\"connect\": {\"id\": 2}}\n}"
        },
        "url": {
          "raw": "{{base_url}}/report",
          "host": ["{{base_url}}"],
          "path": ["report"]
        }
      }
    },
    {
      "name": "Update Report",
      "request": {
        "method": "PATCH",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laporan Keuangan Q1 2024 (Revised)\",\n  \"generatedBy\": \"MANUAL\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/report/:id",
          "host": ["{{base_url}}"],
          "path": ["report", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Delete Report",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/report/:id",
          "host": ["{{base_url}}"],
          "path": ["report", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    }
  ]
}
