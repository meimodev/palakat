{
  "info": {
    "name": "Account API",
    "description": "Account management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Get All Accounts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/account?page=1&pageSize=10&churchId=&search=&position=",
          "host": ["{{base_url}}"],
          "path": ["account"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number (default: 1)"
            },
            {
              "key": "pageSize",
              "value": "10",
              "description": "Items per page (default: 10, max: 100)"
            },
            {
              "key": "churchId",
              "value": "",
              "description": "Filter by church ID"
            },
            {
              "key": "search",
              "value": "",
              "description": "Search by name, phone, or email"
            },
            {
              "key": "position",
              "value": "",
              "description": "Filter by position name"
            }
          ]
        },
        "description": "Get paginated list of accounts with optional filters"
      }
    },
    {
      "name": "Get Account by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/account/:id",
          "host": ["{{base_url}}"],
          "path": ["account", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Account ID"
            }
          ]
        },
        "description": "Get single account by ID with membership details"
      }
    },
    {
      "name": "Count Accounts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/account/count?churchId=",
          "host": ["{{base_url}}"],
          "path": ["account", "count"],
          "query": [
            {
              "key": "churchId",
              "value": "",
              "description": "Optional: Filter count by church ID"
            }
          ]
        },
        "description": "Get total count of accounts, optionally filtered by church"
      }
    },
    {
      "name": "Create Account (Simple)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"phone\": \"081234567890\",\n  \"email\": \"john.doe@example.com\",\n  \"gender\": \"MALE\",\n  \"maritalStatus\": \"SINGLE\",\n  \"dob\": \"1990-01-01\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/account",
          "host": ["{{base_url}}"],
          "path": ["account"]
        },
        "description": "Create account without membership. Gender: MALE | FEMALE, MaritalStatus: MARRIED | SINGLE"
      }
    },
    {
      "name": "Create Account with Membership",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Smith\",\n  \"phone\": \"082345678901\",\n  \"email\": \"jane.smith@example.com\",\n  \"gender\": \"FEMALE\",\n  \"maritalStatus\": \"MARRIED\",\n  \"dob\": \"1985-05-15\",\n  \"membership\": {\n    \"baptize\": true,\n    \"sidi\": true,\n    \"churchId\": 1,\n    \"columnId\": 1\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/account",
          "host": ["{{base_url}}"],
          "path": ["account"]
        },
        "description": "Create account with membership information"
      }
    },
    {
      "name": "Update Account",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"maritalStatus\": \"MARRIED\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/account/:id",
          "host": ["{{base_url}}"],
          "path": ["account", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Update account fields (partial update)"
      }
    },
    {
      "name": "Delete Account",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/account/:id",
          "host": ["{{base_url}}"],
          "path": ["account", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "description": "Delete account by ID"
      }
    }
  ]
}
