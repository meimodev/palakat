{
  "info": {
    "name": "Location API",
    "description": "Location management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
  },
  "variable": [{"key": "base_url", "value": "http://localhost:3000"}],
  "item": [
    {
      "name": "Get All Locations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/location?page=1&pageSize=10",
          "host": ["{{base_url}}"],
          "path": ["location"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "pageSize", "value": "10"}
          ]
        }
      }
    },
    {
      "name": "Get Location by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/location/:id",
          "host": ["{{base_url}}"],
          "path": ["location", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Create Location",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jakarta Pusat\",\n  \"latitude\": -6.1751,\n  \"longitude\": 106.8650\n}"
        },
        "url": {
          "raw": "{{base_url}}/location",
          "host": ["{{base_url}}"],
          "path": ["location"]
        },
        "description": "Create location with coordinates"
      }
    },
    {
      "name": "Update Location",
      "request": {
        "method": "PATCH",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jakarta Pusat Updated\",\n  \"latitude\": -6.1800,\n  \"longitude\": 106.8700\n}"
        },
        "url": {
          "raw": "{{base_url}}/location/:id",
          "host": ["{{base_url}}"],
          "path": ["location", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    },
    {
      "name": "Delete Location",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/location/:id",
          "host": ["{{base_url}}"],
          "path": ["location", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        }
      }
    }
  ]
}
