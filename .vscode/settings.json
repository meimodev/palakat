{
  // Search exclusions for better performance
  "search.exclude": {
    "**/*.g.dart": true,
    "**/*.freezed.dart": true,
    "**/*.gen.dart": true,
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true,
    "**/.dart_tool": true,
    "**/.fvm": true,
    "**/coverage": true
  },

  // Files to exclude from file explorer
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.fvm": false
  },

  // Exclude from file watcher for better performance
  "files.watcherExclude": {
    "**/apps/palakat_backend/node_modules/**": true,
    "**/apps/palakat_backend/dist/**": true
  },

  // Dart/Flutter settings
  "dart.lineLength": 80,
  "dart.analysisExcludedFolders": [
    "**/build",
    "**/.dart_tool",
    "**/node_modules",
    "${workspaceFolder}/apps/palakat_backend"
  ],

  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    
    
  },
  "editor.rulers": [
    80,
    120
  ],

  // Language-specific formatter settings
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },

  // File associations
  "files.associations": {
    "*.yaml": "yaml",
    "melos.yaml": "yaml",
    "pubspec.yaml": "yaml",
    "analysis_options.yaml": "yaml"
  },

  // TypeScript/JavaScript settings (for backend)
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Prettier configuration
  "prettier.enable": true,
  "prettier.requireConfig": true,

  // TypeScript configuration (scoped to backend)
  "typescript.tsdk": "apps/palakat_backend/node_modules/typescript/lib",
  "typescript.disableAutomaticTypeAcquisition": true,

  // ESLint configuration
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "eslint.workingDirectories": [
    {
      "directory": "./apps/palakat_backend",
      "changeProcessCWD": true
    }
  ],

  // Git settings
  "git.ignoreLimitWarning": true,
  "cSpell.words": [
    "autoincrement",
    "BIPRA",
    "riverpod",
    "screenutil",
    "sidi"
  ]
}
